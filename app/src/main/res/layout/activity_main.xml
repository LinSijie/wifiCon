<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter IP address"
        android:textSize="25sp"
        android:id="@+id/tv_ip_instruction"/>

    <EditText
        android:id="@+id/et_ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP address"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Enter RGB Values"
        android:textSize="25sp"
        android:id="@+id/tv_color_instruction"/>

    <EditText
        android:id="@+id/et_red_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Red(0~255)"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/et_green_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Green(0~255)"
        android:textSize="22sp"/>

    <EditText
        android:id="@+id/et_blue_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Blue(0~255)"
        android:textSize="22sp"/>

</LinearLayout>